<!-- This code is meant to be an example on how Mujoco XML works -->

<mujoco model = "RP_Leg">
	<option gravity="0 0 -9.81" timestep="0.01"/>
	<asset>
		<texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2=".6 .8 1" width="256" height="256"/>
		<material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="60 60"/>
	</asset>
	<compiler angle = "radian" coordinate = "local" inertiafromgeom="true"/>
	<asset>
		<mesh name = "EndEffector" file = "stl/EndLeg.stl"/>
		<mesh name = "LinkageCAM" file = "stl/LinkageCAM.stl"/>
		<mesh name = "LinkageCAM_m" file = "stl/LinkageCAM_m.stl"/>
		<mesh name = "LinkageGuide" file = "stl/LinkageLong.stl"/>
		<mesh name = "MiddleLinkage" file = "stl/LinkageMiddle.stl"/>
		<mesh name = "ServoLinkage" file = "stl/ServoLinkage.stl"/>
		<mesh name = "ServoMount" file = "stl/ServoMount.stl"/>
		<mesh name = "ChasisBase" file = "stl/ChasisBase.stl"/>
	</asset>
	<worldbody>
		<light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
		
		<geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="1000 1000 1000" type="plane"/>
		<!-- Main Frame of the Body of the bot -->
		<body name = "Prototype_1">
			<geom type = "mesh" mesh = "ChasisBase" pos = "0 0 70"/>
			<body name = "Leg_1" pos = "25.2 -19.4 105.85">
				<geom type = "mesh" mesh = "ServoMount"  axisangle = "0 0 1 1.0472"/>	
				<body name = "Linkage_1" pos = "0 28.21 -40" axisangle = "0 0 1 1.0472">
					<geom type = "mesh" mesh = "LinkageGuide"/>
					<!-- <joint axis = "1 0 0" pos = "12.21 12.5 -20" type = "hinge"/> -->
				</body>
			</body>
		</body>
	</worldbody>
</mujoco>